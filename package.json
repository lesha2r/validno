{
  "name": "validno",
  "version": "0.4.2",
  "description": "A lightweight TypeScript validation library for runtime data validation. Used as part of Kodzero API framework.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "tsc": "tsc -b src/",
    "tsc-watch": "tsc --b --watch src/",
    "tscw": "tsc --b --watch src/",
    "dev": "nodemon dist/dev.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run tsc"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "author": "lesha2r",
  "license": "ISC",
  "dependencies": {
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^18.14.2",
    "eslint": "^8.14.0",
    "jest": "^29.7.0",
    "mongodb": "^6.19.0"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lesha2r/validno.git"
  },
  "bugs": {
    "url": "https://github.com/lesha2r/validno/issues"
  },
  "homepage": "https://github.com/lesha2r/validno#readme"
}
